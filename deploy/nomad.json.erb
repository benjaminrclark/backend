{
    "Job": {
        "Region": "",
        "ID": "<%=ENV['APP_NAME'] %>-job",
        "Name": "<%=ENV['APP_NAME'] %>-job",
        "Type": "service",
        "Priority": 50,
        "AllAtOnce": false,
        "Datacenters": [<% ENV['DATACENTERS'].split(',').each_with_index do |datacenter,index| %><% if index > 0 %>,<% end %>"<%=datacenter %>"<% end %>],
        "Constraints": null,
        "TaskGroups": [
            {
                "Name": "<%=ENV['APP_NAME'] %>-group",
                "Count": 2,
                "Constraints": null,
                "Tasks": [
                    {
                        "Name": "<%=ENV['APP_NAME'] %>-task",
                        "Driver": "docker",
                        "User": "",
                        "Config": {
                            "args": ["-prefix", "<%=ENV['APP_NAME'] %>/<%=ENV['ENVIRONMENT'] %>>", "-upcase", "-sanitize", "foreman", "start", "-d", "/srv/otto-app"
                            ],
                            <%if ENV['DOCKER_LOGIN'] == 'true' %>
                            "auth": [
                                {
                                    "email": "<%=ENV['DOCKER_EMAIL'] %>",
                                    "password": "<%=ENV['DOCKER_PASSWORD'] %>",
                                    "username": "<%=ENV['DOCKER_USERNAME'] %>"
                                }
                            ],
                            <%end%>
                            "command": "envconsul",
                            "image": "<%=ENV['DOCKER_REPOSITORY'] %>/<%=ENV['APP_NAME'] %>:<%=ENV['GIT_SHORT_COMMIT'] %>",
                            "network_mode": "host"
                        },
                        "Constraints": null,
                        "Env": {
                            "PORT": "${NOMAD_PORT_http}",
                            "NODE": "${node.unique.name}",
                            "GIT_SHORT_COMMIT": "<%=ENV['GIT_SHORT_COMMIT'] %>", 
                            "BRANCH": "<%=ENV['GIT_BRANCH'] %>"
                        },
                        "Services": [
                            {
                                "Id": "",
                                "Name": "<%=ENV['APP_NAME'] %>",
                                "Tags": [
                                    "traefik.enable=true",
                                    "traefik.frontend.rule=Host:<%=ENV['APP_NAME'] %>.<%=ENV['DOMAIN_NAME']%>"
                                ],
                                "PortLabel": "http",
                                "Checks": null
                            }
                        ],
                        "Resources": {
                            "CPU": 500,
                            "MemoryMB": 128,
                            "DiskMB": 300,
                            "IOPS": 0,
                            "Networks": [
                                {
                                    "Public": false,
                                    "CIDR": "",
                                    "ReservedPorts": null,
                                    "DynamicPorts": [
                                        {
                                            "Label": "http",
                                            "Value": 0
                                        }
                                    ],
                                    "IP": "",
                                    "MBits": 100
                                }
                            ]
                        },
                        "Meta": null,
                        "KillTimeout": 5000000000,
                        "LogConfig": {
                            "MaxFiles": 10,
                            "MaxFileSizeMB": 10
                        },
                        "Artifacts": null
                    }
                ],
                "RestartPolicy": {
                    "Interval": 60000000000,
                    "Attempts": 2,
                    "Delay": 15000000000,
                    "Mode": "delay"
                },
                "Meta": null
            }
        ],
        "Update": {
            "Stagger": 0,
            "MaxParallel": 0
        },
        "Periodic": null,
        "Meta": null,
        "Status": "",
        "StatusDescription": "",
        "CreateIndex": 0,
        "ModifyIndex": 0
    }
}
